# Define the MainScreen layout
<MainScreen>:
    FloatLayout:
        Image:
            source: 'photos/gojo.png'
            allow_stretch: False
            keep_ratio: False
            size_hint: 0.6, 0.55
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        Button:
            text: "Go to Game"
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0.3, "y": 0.3}
            on_press: root.manager.current = 'game'
        Button:
            text: "Go to Score"
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0.5, "y": 0.3}
            on_press: root.manager.current = 'score'

# Define the ScoreboardScreen layout
<GameScreen>:
    FloatLayout:
        Button:
            text: "Back to Main Screen"
            size_hint: 0.2, 0.1
            pos_hint: {'center_x':.3, 'center_y': .15}
            on_press: root.manager.current = 'main'
        Button:
            text: "Go to Score"
            size_hint: 0.2, 0.1
            pos_hint: {'center_x':.7, 'center_y': .15}
            on_press: root.manager.current = 'score'
        Label:
            id: score
            font_size: "32sp"
            text: "X first"
            halign: "center"
            pos_hint: {"center_y":.35}
        
        Label:
            id: winc
            font_size: "32sp"
            text: "Who will win?"
            halign: "center"
            pos_hint: {"center_y":.3}

        Button:
            id: restart
            text: "Restart"
            pos_hint: {'center_x':.5, 'center_y': .15}
            size_hint: 0.2, 0.1
            on_release: root.restart()

        GridLayout:
            size_hint: (.5,.5)
            pos_hint: {"center_x": .5, "center_y": .7}
            rows:3
            cols:3
            
            Button:
