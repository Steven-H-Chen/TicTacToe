# Define the SettingsScreen layout
<ScoreScreen>:
    FloatLayout:
        Image:
            source: 'photos/bwb.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Button:
