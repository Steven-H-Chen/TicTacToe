# Define the MainScreen layout
<MainScreen>:
    FloatLayout:
        Button:
            text: "Go to Game"
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.35, "y": 0.6}
            on_press: root.manager.current = 'game'
        Button:
            text: "Go to Score"
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.35, "y": 0.4}
            on_press: root.manager.current = 'score'

# Define the ScoreboardScreen layout
<GameScreen>:
    FloatLayout:
        Button:
            text: "Back to Main Screen"
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.1, "y": 0}
            on_press: root.manager.current = 'main'
        Button:
            text: "Go to Score"
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.6, "y": 0}
            on_press: root.manager.current = 'score'
        Label:
            id: score
            font_size: "32sp"
            text: "X first"
            halign: "center"
            pos_hint: {"center_y":.35}
        
        Label:
            id: winc
            font_size: "32sp"
            text: "Who will win?"
            halign: "center"
            pos_hint: {"center_y":.3}

        Button:
            id: restart
